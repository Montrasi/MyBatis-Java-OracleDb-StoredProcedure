<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="it.mybatis.mapper.SP_PersonMapper">

    <resultMap type="Person" id="PersonResult">
        <id property="idPerson" column="person_id"/>
        <result property="firstname" column="first_name"/>
        <result property="lastname" column="last_name"/>
        <result property="email" column="email"/>
    </resultMap>

    <insert id="insertPerson" statementType="CALLABLE" parameterType="it.mybatis.dto.Person" useGeneratedKeys="false"
            keyColumn="person_id">
        {CALL SAVE_NEW_PERSON(#{firstname}, #{lastname}, #{email})}
    </insert>

    <update id="updatePerson" statementType="CALLABLE" parameterType="it.mybatis.dto.Person">
        {CALL UPDATE_PERSON(#{idPerson}, #{firstname}, #{lastname}, #{email})}
    </update>

    <delete id="deletePerson" statementType="CALLABLE" parameterType="Long">
        {CALL DELETE_PERSON_BY_ID(#{idPerson})}
    </delete>

</mapper>